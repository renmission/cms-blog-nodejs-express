<div class="col-md-9 col-md-offset-3">
    <div class="posts">
        <div class="posts-inner">
            <article class="post">
                <div class="post-header">
                    <h2 class="title"><span>{{ post.title }}</span></h2>

                    <!-- Post Details -->
                    <div class="post-details">
                        <div class="post-cat">
                            <a href="#">{{ post.category.name }}</a>
                        </div>
                        <a href="#" class="post-date"><span>{{generateDate date 'MMMM D, YYYY'}}</span></a>

                    </div>
                    <!-- End Post Details -->
                </div>
                <div class="post-media">
                    <img src="/uploads/{{post.file}}" alt="/uploads/{{post.file}}">
                </div>
                <div class="post-content">

                    <!-- The Content -->
                    <div class="the-excerpt">
                        <p>{{post.body}}</p>
                    </div>
                    <!-- End The Content -->
                    <div class="post-author">
                        Writed by <a href="#">{{ user.firstName }} {{ user.lastName }}</a>
                    </div>
                </div>

            </article>
        </div>





        <!-- Comments -->
        <div id="comments">
            <h2 class="title"><span>Comments</span></h2>

            {{#each post.comments}}
            <div class="comments-inner">
                <ul class="comment-list">
                    <li class="comment">
                        <div class="comment-body">
                            <div class="comment-head">
                                <div class="comment-avatar">
                                    <img alt="avatar" src="/images/user-icon.png">
                                </div>
                                <div class="comment-info">
                                    <h5 class="title">{{ user.firstName }} {{ user.lastName }}</h5>
                                    <span class="comment-date">{{generateDate date 'MMMM D, YYYY'}}</span>
                                </div>
                            </div>
                            <div class="comment-context">
                                <p>{{body}}</p>

                            </div>
                        </div>
                    </li>
                </ul>
            </div>

            {{/each}}




            {{#if user}}

            {{#if post.allowComments}}

            <!-- Respond -->
            <div id="respond" class="comment-respond">
                <h2 class="title"><span>Leave a Reply</span></h2>
                <form action="/admin/comments" method="post" class="contact">
                    <div class="contact-item">
                        <label>Your Comment *</label>
                        <textarea name="body" id="body" placeholder="Type your comment" class="form-control"></textarea>
                        <input type="hidden" name="id" value="{{post.id}}">
                    </div>
                    <div class="contact-item form-submit">
                        <input name="submit" type="submit" id="submit" class="submit" value="Submit">
                    </div>
                </form>
            </div><!-- #respond -->
            <!-- End Respond -->

            {{else}}
            <br>
            <h6>Comments are not allowed for this post.</h6>

            {{/if}}

            {{else}}

            <br>

            <p>To comment, please <a href="/login">login</a></p>

            {{/if}}


        </div>
        <!-- End Comments -->
    </div>
</div>